OBJS = main.o tokenizer.o history.o
# compiler flags.  -g for debug, -O3 for optimization
CFLAGS=-g -O3

all: token

# token (target) depends on all object files (prerequisites)
token: $(OBJS)
	cc -o token $(CFLAGS) $(OBJS)

# all object files built from c files that include draw.h
$(OBJS): tokenizer.h history.h

# deletes files generated by compilation
clean:
	rm -f *.o token

run:token
	./token
